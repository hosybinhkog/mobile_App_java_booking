<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:id="@+id/cardView_popular"
    android:layout_marginEnd="40dp">
    <LinearLayout
        android:background="@color/secondaryColor"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="170dp" >
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/img_popular"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/category2"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/title_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valito House"
                android:textStyle="bold"
                android:textColor="@color/textcolor"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/desc_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Benowo Surabaya"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_baseline_star_24"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_star_24"/>

            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/round"
                android:gravity="center"
                android:id="@+id/showDetail1"
                android:text="Order"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>